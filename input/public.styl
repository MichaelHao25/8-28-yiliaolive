@import 'reset.css'

.w
	position relative
	margin 0 auto
	max-width 1200px
	width 100%

body
	font-size 100%

.header
	.brand, .nav
		float left
		height 100px

	.brand
		width 170px
		background url('') left center no-repeat

	.nav
		padding-left 100px
		color #666666
		font-size 24px

		.item
			padding 20px 0 20px 80px

		a
			position relative
			display block
			line-height 60px
			transition 0.3

			&:after
				position absolute
				right 20%
				bottom 0
				left 20%
				height 4px
				background transparent
				content ''
				transition 0.3s
				transform scaleX(0)

			&:hover
				color #ff44f3

				&:after
					background #ff44f3
					transform scaleX(1)

.main
	.banner-block
		height 500px
		background url('') center center no-repeat

	.join-me-block
		padding 100px 0
		color #4c4c4c

		img
			display block
			max-width 100%
			width 100%

		h2
			font-size 72px
			line-height 2

		p
			color #4c4c4c
			font-size 24px
			line-height 2

		.w600
			max-width 600px
			width 100%

		.w550
			max-width 550px
			width 100%

		.img-w376
			padding-top 30px
			width 376px

		.img-w430
			position absolute
			left 100px
			width 430px
			box-shadow 0 0 10px #ccc

	.contact-block
		padding-bottom 70px

		.w
			display flex
			justify-content space-between

		.item
			padding-bottom 40px
			min-width 330px
			background url('../img/0407f98ada76892397634d6e94b7449e-331+76.png') left bottom no-repeat
			color #4c4c4c
			font-size 18px
			line-height 3

			h2
				position relative
				margin-bottom 10px
				padding-bottom 5px
				color #4c4c4c
				font-size 46px
				line-height 2

				&:after
					position absolute
					bottom 0
					left 0
					width 90px
					height 5px
					background #ff44f3
					content ''

	.index-banner
		height 710px
		background url('') center center no-repeat

		.content
			padding-top 485px
			text-align center
			font-size 0

			.qrcode, .download-btn-group
				display inline-block
				vertical-align middle

			.download-btn-group
				padding-left 30px

				a
					display block
					width 300px
					height 56px
					border 3px solid #fff
					border-radius 5px
					color #ffffff
					text-align center
					font-size 30px
					line-height 56px

					&:hover
						border-color #fff
						background-color #fff
						color #fe3875

						span
							background-image url('../img/3f837e994812fcd35b2833ca4aab0fbf-32+41.png')

					&+a
						margin-top 20px

						&:hover
							span
								background-image url('../img/21ab1b965433bf964a3d4260c4150ee3-32+36.png')

						span
							background-image url('../img/28045cd79deffa8b953ee821b0b08ad3-32+36.png')

					span
						display inline-block
						padding-left 50px
						height 100%
						background url('../img/eb359224222b7d62d13be031efce87b3-32+41.png') left center no-repeat
						transition 0.3s

	.happy
		&.bg9c9d97
			padding-bottom 80px
			background #eff4f7

		&.mb50
			margin-bottom 50px

		.public
			padding 70px 0 160px
			background url('') center 160px no-repeat
			color #111111
			text-align center
			font-size 57px

		.full-img
			display block
			margin 0 auto
			max-width 1756px
			width 100%

		.list
			text-align center
			font-size 0

			li
				position relative
				display inline-block
				overflow hidden
				margin 0 1%
				max-width 320px
				width 18%
				height 440px
				background url('') center center no-repeat

				.title
					position absolute
					top 50%
					left 50%
					color #ffffff
					font-size 26px
					line-height 1
					transform translate(-50%, -50%)

					&:after, &:before
						position absolute
						top 50%
						right -500px
						width 480px
						height 1px
						background #ffffff
						content ''

					&:before
						right auto
						left -500px

	.section
		.title, .sub-title
			padding 80px 0 150px
			background url('../img/f86d96eb5b6a56badcfac9755a0fe1a1-1204+67.png') center 180px no-repeat
			color #111111
			text-align center
			font-size 57px
			line-height 1

		.title
			position fixed
			top 0
			right 0
			left 0
			z-index 1
			display none
			background-color transparent

		.sub-title
			position relative
			z-index 1

		.content
			position relative
			height 1100px
			background #ffffff

		.bgeff4f7
			background #eff4f7

		.sub-bg
			position absolute
			top 0
			right 0
			bottom 100px
			left 0
			background url('') center 300px no-repeat
			background-attachment fixed

		.bgai
			background-attachment initial

